@page
@model TravelGuide.Pages.Account.RegistrationUser

@{
    Layout = "_Layout";
}

<div class="container">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group col-md-5 mx-auto">
            <label asp-for="GetInfo.Email">Email</label>
            <input type="text" class="form-control" asp-for="GetInfo.Email" aria-describedby="emailHelp" placeholder="Inavov@example.forg">
            <span class="text-danger" asp-validation-for="GetInfo.Email"></span>
        </div>
        <div class="form-group col-md-5 mx-auto">
            <label asp-for="GetInfo.PhoneNumber">Номер телефона</label>
            <input type="text" class="form-control" asp-for="GetInfo.PhoneNumber" placeholder="">
            <span class="text-black-50" asp-validation-for="GetInfo.PhoneNumber"></span>
        </div>
        <div class="form-group col-md-5 mx-auto">
            <label asp-for="GetInfo.Password">Пароль</label>
            <input type="text" class="form-control" asp-for="GetInfo.Password" placeholder="Пароль">
            <span class="text-danger" asp-validation-for="GetInfo.Password"></span>
        </div>
        <div class="form-group col-md-5 mx-auto">
            <label asp-for="GetInfo.PasswordConfirm">Опять пароль</label>
            <input type="text" class="form-control" asp-for="GetInfo.PasswordConfirm" placeholder="">
            <span class="text-danger" asp-validation-for="GetInfo.PasswordConfirm"></span>
        </div>
        <div class="form-group col-md-5 mx-auto">
            <input type="submit" class="btn btn-success btn-ms btn-block">
        </div>
    </form>

</div>