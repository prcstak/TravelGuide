@page
@using Microsoft.AspNetCore.Http
@model TravelGuide.Pages.Info.RentApartment.AdPage

@{
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div class="container">
    <div class="row">
        @{
            var add = Model.Advertisement;
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-9">
                        @if (User.Identity.Name == add.PersonId.ToString()
                             || HttpContext.Session.GetInt32("id") == add.PersonId)
                        {
                            <a class="btn btn-outline-success" asp-page="./Edit" asp-route-id=@add.Id>Редактировать описание</a>
                        }
                    </div>
                    <div class="col-md-9">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                @{
                                    var mas = add.Address.Split(";");
                                    var fg = false;
                                    foreach (var v in mas)
                                    {
                                        var url = "/images/RentImg/" + v;
                                        if (!fg)
                                        {
                                            <div class="carousel-item active">
                                                <img src="@url" class="image featured" alt=""/>
                                            </div>
                                            fg = true;
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img src="@url" class="image featured" alt=""/>
                                            </div>
                                        }
                                    }
                                }
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <small class="text-muted">
                                <strong>Срок сдачи:</strong> @add.Duration
                            </small><br/>
                            <small class="text-muted">
                                <strong>Колличество комнат:</strong> @add.Rooms
                            </small>
                            <p class="card-text">@add.Info</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</body>
</html>