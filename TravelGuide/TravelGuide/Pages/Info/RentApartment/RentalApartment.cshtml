@page
@model TravelGuide.Pages.RentalApartment

@{
    ViewData["Title"] = "Аренда";
}
<br/>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-lg-9">
            @foreach (var add in Model.Advertisements)
            {
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                                <div class="carousel-inner">

                                    @{
                                        var mas = add.Address.Split(";");
                                        var fg = false;
                                        foreach (var v in mas)
                                        {
                                            var url = "/images/RentImg/" + v;
                                            if (!fg)
                                            {
                                                <div class="carousel-item active">
                                                    <img src="@url" class="image featured" alt=""/>
                                                </div>
                                                fg = true;
                                            }
                                            else
                                            {
                                                <div class="carousel-item">
                                                    <img src="@url" class="image featured" alt=""/>
                                                </div>
                                            }
                                        }
                                    }
                                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <a href="google.com" class="text-dark"><p class="card-text">@add.Info</p></a>
                                <small class="text-muted"><strong>Срок сдачи:</strong> @add.Duration</small><br/>
                                <small class="text-muted"><strong>Колличество комнат:</strong> @add.Rooms</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="col-lg-3 col-sm-12">
            <div class="sidebar">
                <section class="d-none d-md-block">
                    <h2 class="major">
                        <a asp-page="/Info/RentalApartment" class="image featured">
                            <span>Квартиры в аренду</span>
                        </a>
                    </h2>
                    <a asp-page="/Info/RentalApartment" class="image featured">
                        <img src="/images/rent.jpg" alt=""/>
                    </a>
                </section>
                <ul class="divided">
                    <li class="d-block d-md-none">
                        <article class="box post-summary">
                            <h3>
                                <a asp-page="/Info/RentalApartment">Квартиры в аренду</a>
                            </h3>
                        </article>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>