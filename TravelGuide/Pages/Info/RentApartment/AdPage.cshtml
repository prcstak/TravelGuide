@page
@using System.Text.Json
@using Microsoft.AspNetCore.Http
@using TravelGuide.Pages.Info.RentApartment
@model TravelGuide.Pages.Info.RentApartment.AdPage

@{
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div class="container">
    <div class="row">
        @{
            
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-9">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                @{
                                    var mas = JsonSerializer.Deserialize<Images>("{\"List\":[\"xl_5bb88f5724e02d5324b613c2a6e6e984.jpg\",\"xl_276a403db950200ca5b184eb226fdd4b.jpg\",\"xl_bf1e402bf4b503e521eb6168f5fb3665.jpg\"]}");
                                    var fg = false;
                                    foreach (var v in mas.List)
                                    {
                                        var url = "/images/RentImg/" + v;
                                        if (!fg)
                                        {
                                            <div class="carousel-item active">
                                                <img src="@url" class="image featured" alt=""/>
                                            </div>
                                            fg = true;
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img src="@url" class="image featured" alt=""/>
                                            </div>
                                        }
                                    }
                                }
                                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="card-body">
                            <small class="text-muted">
                                <strong>Срок сдачи:</strong> неделя
                            </small><br/>
                            <small class="text-muted">
                                <strong>Колличество комнат:</strong> 3
                            </small>
                            <p class="card-text">Имеется всё для комфортного проживания, необходимая мебель, кухонный гарнитур, техника. Квартира светлая, уютная рассматриваем чистоплотных аккуратных жильцов!!! Все остальные вопросы по телефону.</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</body>
</html>