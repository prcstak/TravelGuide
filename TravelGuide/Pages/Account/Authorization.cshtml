@page
@using Microsoft.AspNetCore.Identity
@model TravelGuide.Pages.Account.AuthorizationModel

@{
}

<div class="container">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group col-md-5 mx-auto">
            <label asp-for="UserInfo.Email">Email</label>
            <input type="text" class="form-control" asp-for="UserInfo.Email" aria-describedby="emailHelp" placeholder="">
            <span class="text-black-50">Inavov@example.frog</span>
            <span class="text-danger" asp-validation-for="UserInfo.Email"></span>
        </div>
        <div class="form-group col-md-5 mx-auto">
            <label asp-for="UserInfo.Password">Пароль</label>
            <input type="password" class="form-control" asp-for="UserInfo.Password" placeholder="">
            <span class="text-danger" asp-validation-for="UserInfo.Password"></span>
        </div>
        <div class="form-group col-md-5 mx-auto">
            <span class="text-danger">@Html.DisplayFor(d => Model.PassVerification)</span>
        </div>
        <div class="form-group col-md-5 mx-auto">
            <div class="form-check">
                <input class="form-check-input "type="checkbox" asp-for="UserInfo.RememberMe"/>
                <label class="form-check-label" asp-for="UserInfo.RememberMe">Запомнить меня</label>
            </div>
        </div>
        <div class="form-group col-md-5 mx-auto">
            <input type="submit" class="btn btn-success btn-ms btn-block">
        </div>
    </form>
    <div class="form-group col-md-5 mx-auto">
        <a role="button" class="btn btn-outline-success btn-sm btn-block" asp-page="RegistrationUser" style="text-decoration: none">
            Создать
        </a>
    </div>

</div>